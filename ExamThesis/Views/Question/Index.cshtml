@model IEnumerable<Question>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Question List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Question" asp-action="Create" class="btn btn-primary">
                <i class="bi bg-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
</div>
<br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                QuestionId
            </th>
            <th>
                QuestionText
            </th>
            <th>
                QuestionType
            </th>
            <th>
                QuestionPoints
            </th>
            <th>
                NegativePoints
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.QuestionId
                </td>
                <td width="50%">
                    @obj.QuestionCategoryId
                </td>
                <td width="30%">
                    @obj.QuestionText
                </td>
                <td width="30%">
                    @obj.QuestionType
                </td>
                <td width="30%">
                    @obj.QuestionPoints
                </td>
                <td width="30%">
                    @obj.NegativePoints
                </td>
            </tr>
        }
    </tbody>
</table>