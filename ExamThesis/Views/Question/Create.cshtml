@model ExamThesis.Storage.Model.Question
<form method="post">
    <div class="border p-3 mt-4"></div>
    <div class="row pb-2">
        <h2 class="text-primary">Create Question</h2>
    </div>
    <div class="mb-3">
        <label asp-for="QuestionText">Question</label>
        <input asp-for="QuestionText" class="form-control" />
    </div>
    <div class="form-group">
        <label for="QuestionCategoryId">Κατηγορία Ερώτησης</label>
        <select class="form-control" asp-for="QuestionCategoryId">
            <option value="">Επιλέξτε κατηγορία</option>
            @foreach (var category in ViewBag.QuestionCategories)
            {
                <option value="@category.QuestionCategoryId">@category.QuestionCategoryName</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="QuestionTypeId">Type</label>
        <input asp-for="QuestionTypeId" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="QuestionPoints">Points</label>
        <input asp-for="QuestionPoints" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="NegativePoints">Negative Points</label>
        <input asp-for="NegativePoints" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
    <a asp-controller="Question" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
</form>
