@model IEnumerable<ExamThesis.Storage.Model.QuestionCategory>
@{
    ViewData["Title"] = "Question Categories";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.3/dist/litera/bootstrap.min.css" />

<div class="container p-3">
    <div class="row pt-2 align-items-center">
        <div class="col-6">
            <h2 class="text-primary mb-0">Question Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="QuestionCategory" asp-action="Create" class="btn btn-success">
                <i class="bi bg-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <ul class="list-group">
        @foreach (var categories in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="mb-1">@categories.QuestionCategoryName</h6>
                    <small class="text-muted">ID: @categories.QuestionCategoryId</small>
                </div>
                <div>
                    <a asp-controller="QuestionCategory" asp-action="Delete" asp-route-id="@categories.QuestionCategoryId"
                       class="btn btn-outline-danger btn-sm">Delete</a>
                </div>
            </li>
        }
    </ul>
}
else
{
    <div class="alert alert-info m-3">No categories available.</div>
}