@model List<ExamThesis.Storage.Model.Exam>
@using ExamThesis.Controllers
@using static ExamThesis.Controllers.AuthConnection.AuthController
@inject ExamThesis.Controllers.ExamController ExamController

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.3/dist/litera/bootstrap.min.css" />
}

<div class="container py-4">
    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var exam in Model)
            {
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title mb-2">@exam.ExamName</h5>

                            <div class="mb-3 small">
                                <div><strong>Start Time:</strong> @exam.StartTime.ToString("dd/MM/yyyy HH:mm")</div>
                                <div><strong>End Time:</strong> @exam.EndTime.ToString("dd/MM/yyyy HH:mm")</div>
                                <div><strong>Total Points:</strong> @exam.TotalPoints</div>
                                <div><strong>Pass Grade:</strong> @exam.PassGrade</div>
                            </div>

                            <div class="mt-auto d-flex flex-wrap gap-2">
                                <a href="@Url.Action("Exam", new { id = exam.ExamId })" class="btn btn-primary">Start Exam</a>
                                @if (User.IsInRole(UserRoles.Teacher))
                                {
                                    <a asp-controller="Exam" asp-action="Delete" asp-route-id="@exam.ExamId" class="btn btn-danger">Delete</a>
                                    <a href="@Url.Action("ExportExamResultsToExcel", new { id = exam.ExamId })" class="btn btn-success">Export to Excel</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">No exams available.</div>
    }

    @if (User.IsInRole(UserRoles.Teacher))
    {
        <div class="mt-4">
            <a href="@Url.Action("Create")" class="btn btn-success">Create Exam</a>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger mt-3" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }
</div>