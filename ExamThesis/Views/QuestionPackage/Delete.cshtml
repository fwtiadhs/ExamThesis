@model ExamThesis.Storage.Model.QuestionPackage

<h2>Delete Package</h2>

<div>
    <h4>Are you sure you want to delete this package?</h4>
    <div>
        <h5>Package Details</h5>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PackageName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PackageName)
            </dd>
        </dl>

        @using (Html.BeginForm("Delete", "QuestionPackage", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.PackageId)
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
            </div>
        }
    </div>
</div>
